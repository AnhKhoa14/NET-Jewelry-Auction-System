    <section class="price_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Our Jewellery Price
                </h2>
            </div>
            <div class="price_container">
                @foreach (var item in Model.Jewelries)
                {
                    <div class="box">
                        <div class="name">
                            <h6>
                                @item.Name
                            </h6>
                        </div>
                        <div class="img-box" style="height: 300px">
                            @if (!string.IsNullOrEmpty(item.Image))
                            {
                                <img style="width: 300px" src="@item.Image" alt="Jewelry Image">
                            }
                            else
                            {
                                <p>No image available</p>
                            }
                        </div>
                        <div class="detail-box">
                            <h5>
                                $<span>@item.Price</span>
                            </h5>
                            <h8>
                                <span>@item.Description</span>
                            </h8>
                        </div>
                        <div class="button-box">
                            <form action="/Template/Auctions" method="get">
                                <button type="submit" class="btn btn-primary">Go to Auction</button>
                            </form>
                        </div>
                         
                    </div>
                }
            </div>
            <div class="d-flex justify-content-center">
                <a href="javascript:void(0)" class="price_btn">
                    See More
                </a>
            </div>
        </div>
    </section>

