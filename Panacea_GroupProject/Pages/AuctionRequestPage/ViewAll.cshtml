@page
@model Panacea_GroupProject.Pages.AuctionRequestPage.ViewAllModel

@{
    ViewData["Title"] = "ViewAll";
}

<h1>ViewAll</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuctionRequest[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuctionRequest[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuctionRequest[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuctionRequest[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuctionRequest[0].RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuctionRequest[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuctionRequest[0].IsDelete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AuctionRequest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDelete)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
