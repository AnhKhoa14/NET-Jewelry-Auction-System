<div class="jewelry_section">
	<div class="container">
		<h1 class="feature_taital">Jewelry Detail</h1>
		<div class="jewelry_section_2">
			<div class="row">
				<div class="col-md-6">
					<div class="jewelry_img"><img src="" alt="" /></div>
				</div>
				<div class="col-md-6">
					<h1 class="jewelry_taital">@Model.currentAuction?.Jewelry?.Name</h1>
					<p class="jewelry_text">Price: $@Model.currentAuction?.Price</p>
					<p class="jewelry_text">Status: @Model.currentAuction?.Status</p>
					<p class="jewelry_text">Start Date: @Model.currentAuction.StartDate</p>
					<p class="jewelry_text">End Date: @Model.currentAuction.EndDate</p>
					<p class="jewelry_text">@Model.currentAuction?.Jewelry?.Description</p>
				</div>

			</div>
			<h2 class="text-center mt-5">Bids</h2>
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Bidder</th>
						<th scope="col">Bid Amount</th>
						<th scope="col">Bid Time</th>
					</tr>
				</thead>
				<tbody>
					@if (Model.Bids != null)
					{
						@foreach (var bid in Model.Bids)
						{
							<tr>
								<td>@bid.User.Name</td>
								<td>@bid.Amount</td>
								<td>@bid.BidTime</td>
							</tr>
						}
					}
					else
					{
						<tr>
							<td colspan="3">No bids found.</td>
						</tr>
					}
				</tbody>
			</table>

			<form asp-page-handler="PlaceBid" method="post" class="form-inline justify-content-center">
				<div class="form-group mb-2">
					<label for="bidAmount" class="sr-only">Bid Amount</label>
					<input type="number" class="form-control" id="bidAmount" name="BidAmount" placeholder="Enter your bid" value="@Model.AmountBid">
				</div>
				<button type="submit" class="btn btn-primary mb-2">Place Bid</button>
			</form>
		</div>
	</div>
