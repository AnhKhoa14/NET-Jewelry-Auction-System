@page
@model Panacea_GroupProject.Pages.AuctionsPage.RequestModel
@{
    ViewData["Title"] = "Request";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="AuctionsRequest.Title"></label>
        <input asp-for="AuctionsRequest.Title" class="form-control" />
        <span asp-validation-for="AuctionsRequest.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuctionsRequest.Description"></label>
        <textarea asp-for="AuctionsRequest.Description" class="form-control"></textarea>
        <span asp-validation-for="AuctionsRequest.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuctionsRequest.Image"></label>
        <input asp-for="AuctionsRequest.Image" class="form-control" />
        <span asp-validation-for="AuctionsRequest.Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuctionsRequest.AuctionId"></label>
        <input asp-for="AuctionsRequest.AuctionId" class="form-control" />
        <span asp-validation-for="AuctionsRequest.AuctionId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuctionsRequest.UserId"></label>
        <input asp-for="AuctionsRequest.UserId" class="form-control" />
        <span asp-validation-for="AuctionsRequest.UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuctionsRequest.RequestDate"></label>
        <input asp-for="AuctionsRequest.RequestDate" class="form-control" type="date" />
        <span asp-validation-for="AuctionsRequest.RequestDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuctionsRequest.Status"></label>
        <input asp-for="AuctionsRequest.Status" class="form-control" />
        <span asp-validation-for="AuctionsRequest.Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
