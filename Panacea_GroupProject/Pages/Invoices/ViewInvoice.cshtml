			<div>
				<p class="text-primary">Invoice To</p>
				<h4>@Model.Invoice.User.Name</h4>
				<ul class="list-unstyled">
					<li>@Model.Invoice.User.Email</li>
					<li>@Model.Invoice.User.Address</li>
				</ul>
			</div>
			<div class="mt-5 mt-md-0">
				<p class="text-primary">Invoice From</p>
				<h4>FPTU - NET1705</h4>
				<ul class="list-unstyled">
					<li>Panacea.net1705@gmail.com</li>
					<li>FPTU</li>
				</ul>
			</div>
		</div>

		<table class="table border my-5">
			<thead>
				<tr class="bg-primary-subtle">
					<th scope="col">No.</th>
					<th scope="col">Jewelry</th>
					<th scope="col">Status</th>
					<th scope="col">Price</th>
					@if(Model.LoggedInUser.RoleId.Equals(4) || Model.LoggedInUser.RoleId.Equals(5))
					{
						<th scope="col">Action</th>
					}				
				</tr>
			</thead>
			<tbody>
				<tr>
					<th scope="row">1</th>
					<td>@Model.Invoice.Auction.Jewelry.Name</td>
					<td>@Model.Invoice.Status</td>
					<td>@Model.Invoice.TotalPrice</td>
					@if (Model.LoggedInUser.RoleId.Equals(4) || Model.LoggedInUser.RoleId.Equals(5)) 
					{
					<td>
						@if (Model.Invoice.Status.Equals("Pending"))
						{
							<form method="post">
								<input type="hidden" name="invoiceId" value="@Model.Invoice.Id" />
								<button type="submit" class="btn btn-primary">Update</button>
							</form>
						}
					</td>
					}
				</tr>

				<tr>
					<th></th>
					<td></td>
					<td>Total</td>
					<td>@Model.Invoice.TotalPrice.ToString("C")</td>
					<td></td>
				</tr>
			</tbody>
		</table>

