								<span asp-validation-for="Description" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Price" class="control-label">Price (auto-calculated)</label>
								<input asp-for="Price" id="totalPrice" class="form-control" readonly />
								<span asp-validation-for="Price" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="AuctionRequestId" class="control-label">Select Auction Request</label>
								<select id="auctionRequestDropdown" class="form-control" asp-for="AuctionRequestId" asp-items="ViewBag.AuctionRequestId"></select>
