							</div> 
							<div class="form-group">
								<label id="imageLabel" class="control-label">Image:</label>
								<input type="file" id="imageInput" class="form-control" name="ImageFile" />
								<img id="imagePreview" src="#" alt="Image Preview" style="max-width: 200px; max-height: 200px; display:none;" />
								<span asp-validation-for="ImageFile" class="text-danger"></span>
							</div> 
							<div class="form-group">
								<label class="control-label">Materials</label>
								@foreach (var material in (SelectList)ViewData["MaterialOptions"])
								{
									var materialName = material.Text;
									var indexOfDash = materialName.LastIndexOf("-");
									var materialNamePart = materialName.Substring(indexOfDash + 1).Trim();
									var materialPrice = decimal.Parse(materialNamePart);
									<div class="form-check">
										<input type="checkbox" class="form-check-input material-checkbox" name="SelectedMaterialIds" value="@material.Value" id="material-@material.Value" data-quantity-input="quantity-@material.Value" data-price="@materialPrice" />
										<label class="form-check-label" for="material-@material.Value">@materialName</label>
										<input type="number" class="form-control material-quantity" name="SelectedMaterialQuantities" id="quantity-@material.Value" data-material="@material.Value" placeholder="Quantity" min="0.01" step="0.01" disabled />
									</div>
								}
							</div>
							<div class="form-group d-flex justify-content-between">
